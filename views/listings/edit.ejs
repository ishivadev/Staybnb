<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col col-8 offset-2">
        <br><br>
        <h3>Edit your listing</h3>
        <br>
        <form method="POST" enctype="multipart/form-data" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name=listing[title] class="form-control" value="<%=listing.title%>" required> </input>
            <div class="valid-feedback"> Title looks good! </div>
            <div class="invalid-feedback"> Enter a valid title. </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name=listing[description] class="form-control" required ><%=listing.description%>  </textarea>
            <div class="invalid-feedback"> Enter a short description. </div>
        </div>
        <div class="mb-3">
            Original Listing Image <br>
            <img src="<%= originalImageUrl %>" alt="original-listing-image">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name=listing[image] class="form-control" >  </input>
            <div class="invalid-feedback"> Please select a new image. </div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="text" name=listing[price] class="form-control" value="<%=listing.price%>" required>  </input>
            <div class="valid-feedback"> Looks a good price! </div>
            <div class="invalid-feedback"> Enter a valid price. </div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name=listing[country] class="form-control"  value="<%=listing.country%>" required>  </input>
            <div class="invalid-feedback"> Enter a valid country name. </div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name=listing[location] class="form-control" value="<%=listing.location%>" required>  </input>
            <div class="invalid-feedback"> Enter a valid location. </div>
        </div>

        <button class="btn btn-dark edit-btn">Update</button>
        <br><br>
    </form>

</div>
</div>
</body>
